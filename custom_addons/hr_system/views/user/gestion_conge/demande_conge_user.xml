<odoo>

    <!-- Tree View for User -->
    <record id="view_gestion_conge_tree_user" model="ir.ui.view">
        <field name="name">gestion.conge.tree.user</field>
        <field name="model">gestion.conge</field>
        <field name="arch" type="xml">
            <tree string="Mes Congés">
                <field name="type_conge_id"/>
            </tree>
        </field>
    </record>

    <!-- Form View for User -->
    <record id="view_gestion_conge_form_user" model="ir.ui.view">
        <field name="name">gestion.conge.form.user</field>
        <field name="model">gestion.conge</field>
        <field name="arch" type="xml">
            <form string="Demande de Congé">
                <header >
                    <field name="state" widget="statusbar" readonly="1"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="user_id" readonly="1"/>
                            <field name="type_conge_id"/>
                            <field name="description" widget="text" />
                            <field name="document_support" widget="file" />
                            <field name="message_refused_by_manager" invisible="state not in ('manager_reject')" readonly="1" />
                            <field name="message_refused_by_hr" invisible="state not in ('refused')" readonly="1" />
                            <field name="report_file" invisible="state not in ('done')" />
                        </group>
                        <group>
                            <field name="date_from" widget="daterange" options="{'related_end_date': 'date_to'}"/>
                            <field name="date_to" widget="daterange" options="{'related_start_date': 'date_from'}"/> 
                            <div style="display: flex; column-gap: 1rem;"><field name="duree"/> jours</div>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
        <field name="groups_id" eval="[(6, 0, [ref('hr_system.group_demande_sortie_user')])]"/>
    </record>

    <!-- Calendar View -->
    <record id="view_gestion_conge_calendar_user" model="ir.ui.view">
        <field name="name">gestion.conge.calendar</field>
        <field name="model">gestion.conge</field>
        <field name="arch" type="xml">
            <calendar string="Gestion des Congés"
                      date_start="date_from"
                      date_stop="date_to"
                      mode="month"
                      quick_create="0"
                      color="type_conge_id"
                      event_open_popup="True">
                <field name="user_id" string="User"/>
                <field name="type_conge_id" string="Type"/>
            </calendar>
        </field>
        <field name="groups_id" eval="[(6, 0, [ref('hr_system.group_demande_sortie_user')])]"/>
    </record>

    <!-- kanaban View -->
    <record id="view_gestion_conge_kanban_user" model="ir.ui.view">
        <field name="name">gestion.conge.kanban</field>
        <field name="model">gestion.conge</field>
        <field name="arch" type="xml">
            <kanban string="Congé Requests">
                <field name="state" /> <!-- Ensure the 'state' field is loaded -->
    
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 10px"> 
                                <span style="font-weight: bold;"><field name="type_conge_id" /></span>
                                <span style="font-weight: bold;"><field name="duree" /> jours</span>
                            </div>
                            <div>
                                <p>Du <field style="font-weight: bold;" name="date_from" /> au <field style="font-weight: bold;" name="date_to" /> </p>
                                <p>Demandé par : <field style="font-weight: bold;" name="user_id"/> </p>
                            </div>
                            <div class="buttons" style="margin-top: 10px; display: flex; justify-content: space-between">
                                <field name="state" widget="badge" decoration-danger="state == 'refused' or state == 'manager_reject'" decoration-success="state == 'done'" decoration-muted="state == 'pending'" decoration-info="state == 'manager_approval'" />
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View for User with Search Panel -->
    <record id="view_gestion_conge_search_user" model="ir.ui.view">
        <field name="name">gestion.conge.search.user</field>
        <field name="model">gestion.conge</field>
        <field name="arch" type="xml">
            <search>
                <field name="date_from" />
                    <filter string="Date Range" name="daterange" />
                    <field name="date_to" />
                    <filter name="filter_pending" string="Pending" domain="[('state', '=', 'pending')]"/>
                    <filter name="group_by_state" string="State" context="{'group_by' : 'state'}" />
                    <searchpanel>
                        <field name="state" icon="fa-filter" enable_counters="1"/>
                    </searchpanel>
            </search>
        </field>
    </record>
    

    <!-- Action to display User's own Congés -->
    <record id="action_gestion_conge_user" model="ir.actions.act_window">
        <field name="name">Mes Congés</field>
        <field name="res_model">gestion.conge</field>
        <field name="view_mode">tree,form,calendar,kanban</field>
        <field name="view_id" ref="view_gestion_conge_tree_user"/>
        <field name="view_ids" eval="[(5, 0, 0), 
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_gestion_conge_kanban_user')}),
            (0, 0, {'view_mode': 'calendar', 'view_id': ref('view_gestion_conge_calendar_user')}),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('view_gestion_conge_tree_user')}), 
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_gestion_conge_form_user')})]"/>
        <field name="domain">[('user_id', '=', uid)]</field>
        <field name="groups_id" eval="[(6, 0, [ref('hr_system.group_demande_sortie_user')])]"/>
    </record>

    <!-- Menu item for User to see their own Congés -->
    <menuitem id="menu_gestion_conge_user"
        name="Congé (User)"
        parent="conge"
        action="action_gestion_conge_user"
        groups="hr_system.group_demande_sortie_user"
        sequence="20"/>
</odoo>