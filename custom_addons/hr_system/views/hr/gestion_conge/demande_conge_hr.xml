<odoo>

    <!-- HR Tree View -->
    <record id="view_gestion_conge_tree_hr" model="ir.ui.view">
        <field name="name">gestion.conge.tree.hr</field>
        <field name="model">gestion.conge</field>
        <field name="arch" type="xml">
            <tree string="Congé Requests - HR">
                <field name="type_conge_id"/>
            </tree>
        </field>
        <!-- Restrict to HR manager group -->
        <field name="groups_id" eval="[(6, 0, [ref('hr_system.group_demande_sortie_hr')])]"/>
    </record>

    <!-- HR Form View -->
    <record id="view_gestion_conge_form_hr" model="ir.ui.view">
        <field name="name">gestion.conge.form.hr</field>
        <field name="model">gestion.conge</field>
        <field name="arch" type="xml">
            <form string="Congé Request - HR">
                <header >
                    <button name="action_hr_accept" type="object" string="Accepter" class="accept_button" invisible="state not in ('manager_approval', 'refused')"/>
                    <button name="action_hr_reject" type="object" string="Refuser" class="reject_button" invisible="state not in ('manager_approval', 'done')"/>
                    <field name="state" widget="statusbar" readonly="1"/>
                </header>
                <sheet>
                    
                    <group>
                        <group>
                            <field name="user_id" readonly="1"/>
                            <field name="type_conge_id" readonly="1"/>
                            <field name="description" widget="text" readonly="1" />
                            <field name="document_support" widget="file" readonly="1" />
                            <field name="message_refused_by_hr" invisible="state not in ('refused')" />
                            <field name="report_file" invisible="state not in ('done')" />
                        </group>
                        <group>
                            <field name="date_from" widget="daterange" options="{'related_end_date': 'date_to'}" readonly="1"/>
                            <field name="date_to" widget="daterange" options="{'related_start_date': 'date_from'}" readonly="1"/> 
                            <div style="display: flex; column-gap: 1rem;"><field name="duree"/> jours</div>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
        <!-- Restrict to HR manager group -->
        <field name="groups_id" eval="[(6, 0, [ref('hr_system.group_demande_sortie_hr')])]"/>
    </record>

    <!-- kanban view for HR -->
    <record id="view_gestion_conge_kanban_hr" model="ir.ui.view">
        <field name="name">gestion.conge.kanban</field>
        <field name="model">gestion.conge</field>
        <field name="arch" type="xml">
            <kanban string="Congé Requests">
                <field name="state" /> <!-- Ensure the 'state' field is loaded -->
    
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 10px"> 
                                <span style="font-weight: bold;"><field name="type_conge_id" /></span>
                                <span style="font-weight: bold;"><field name="duree" /> jours</span>
                            </div>
                            <div>
                                <p>Du <field style="font-weight: bold;" name="date_from" /> au <field style="font-weight: bold;" name="date_to" /> </p>
                                <p>Demandé par : <field style="font-weight: bold;" name="user_id"/> </p>
                            </div>
                            <div class="buttons" style="margin-top: 10px; display: flex; justify-content: space-between">
                                <field name="state" widget="badge" decoration-danger="state == 'refused'" decoration-success="state == 'done'" decoration-muted="state == 'manager_approval'" />
    
                                <!-- Accept button is visible if state is 'manager_reject' or 'pending' -->
                                
                                <div class="btns">
                                    <t t-if="record.state.raw_value == 'manager_approval' or record.state.raw_value == 'refused' ">
                                        <button name="action_hr_accept" type="object" class="accept_button" >
                                            <i class="fa fa-thumbs-up"/> Accepter
                                        </button>
                                    </t>
        
                                    <!-- Reject button is visible if state is 'manager_approval' or 'pending' -->
                                    <t t-if="record.state.raw_value == 'manager_approval' or record.state.raw_value == 'done' ">
                                        <button name="action_hr_reject" type="object" class="reject_button">
                                            <i class="fa fa-times"/> Refuser
                                        </button>
                                    </t>
                                </div>

                                <!-- <t t-if="record.state.raw_value == 'pending' ">
                                    <button name="action_manager_reject" type="object" string="Refuse" class="btn-danger" />
                                </t> -->
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- calendar view for HR -->
    <record id="view_gestion_conge_calendar_hr" model="ir.ui.view">
        <field name="name">gestion.conge.calendar</field>
        <field name="model">gestion.conge</field>
        <field name="arch" type="xml">
            <calendar string="Gestion des Congés"
                      date_start="date_from"
                      date_stop="date_to"
                      mode="month"
                      quick_create="0"
                      color="type_conge_id"
                      event_open_popup="True">
                <field name="user_id" string="User"/>
                <field name="type_conge_id" string="Type"/>
            </calendar>
        </field>
        <field name="groups_id" eval="[(6, 0, [ref('hr_system.group_demande_sortie_hr')])]"/>
    </record>

    <!-- HR Action Window -->
    <record id="action_gestion_conge_hr" model="ir.actions.act_window">
        <field name="name">Congé (HR)</field>
        <field name="res_model">gestion.conge</field>
        <field name="view_mode">kanban,calendar,form,tree</field>
        <field name="view_id" ref="view_gestion_conge_tree_hr"/>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_gestion_conge_kanban_hr')}),
            (0, 0, {'view_mode': 'calendar', 'view_id': ref('view_gestion_conge_calendar_hr')}),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('view_gestion_conge_tree_hr')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_gestion_conge_form_hr')})
        ]"/>

        <field name="domain">[('state', 'in', ['refused','done','manager_approval'])]</field>
        <field name="groups_id" eval="[(6, 0, [ref('hr_system.group_demande_sortie_hr')])]"/>
    </record>

    <!-- HR Menu item -->
    <menuitem id="menu_gestion_conge_hr" 
              name="Congé (HR)" 
              parent="conge" 
              action="action_gestion_conge_hr"
              groups="hr_system.group_demande_sortie_hr" 
              sequence="10"/>

</odoo>
