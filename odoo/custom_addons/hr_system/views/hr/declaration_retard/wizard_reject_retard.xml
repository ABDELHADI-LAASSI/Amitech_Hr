<odoo>
    <!-- Wizard form view -->
    <record id="view_declaration_retard_reject_wizard_form_hr" model="ir.ui.view">
        <field name="name">demande.retard.reject.hr.wizard.form</field>
        <field name="model">demande.retard.reject.hr.wizard</field>
        <field name="arch" type="xml">
            <form string="Reject la Demande de Retard">
                <group>
                    <field name="message_refused_by_hr"/>
                </group>
                <footer>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                    <button string="Reject" type="object" name="action_reject" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
